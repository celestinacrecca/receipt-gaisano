// Online C compiler to run C program online
#include <stdio.h>
int main() {
    float discount, discountedprice, originalprice, vat, tax, total;
    printf("\n\nRainy Day Sale");
    printf("\n\nEnter the original price: ");
    scanf("%f", &originalprice);
    {
    }    
        discount = .50;
        printf("\n\nDiscount: 50 percent");
    {
    }    
        discountedprice = originalprice * discount;
        printf("\nDiscountedPrice: %.2f", discountedprice);
    {
    }    
        vat = originalprice * 0.12;
        printf("\nVAT Amount: %.2f", vat);
    {
    }    
        tax = originalprice - vat;
        printf("\nTaxableAmount: %.2f", tax);
    {
    }    
        total = originalprice * discount;
        printf("\nTotal Payable Amouunt: %.2f", total);
        {
        }    
        return 0;

            
        }      
